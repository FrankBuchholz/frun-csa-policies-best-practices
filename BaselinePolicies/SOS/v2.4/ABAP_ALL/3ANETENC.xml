<targetsystem xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" desc="[BL2.4] Encryption of Network Connections (ABAP)" id="3ANETENC" multisql="Yes" version="0000" xsi:schemaLocation="csa_policy.xsd">
