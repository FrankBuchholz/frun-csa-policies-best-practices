      <noncomplianttext/>
    </checkitem>
    <checkitem desc="[p3-EXTENDED] snc/log_unencrypted_rfc (profile parameter)" id="NETENC-A_d">
      <compliant>       NAME = 'snc/log_unencrypted_rfc' and VALUE = '2' </compliant>
      <complianttext/>
