        <joincompliant> ( component = 'SAP_BASIS' and version = '740' and SP &lt; '0008' ) OR
                      ( component = 'SAP_BASIS' and version &lt; '740' )
      </joincompliant>
        <joinnoncompliant> 
                      ( component = 'SAP_BASIS' and version = '740' and SP &lt; '0008' ) OR
                      ( component = 'SAP_BASIS' and version &lt; '740' )
      </joinnoncompliant>
      </joinstore>
    </checkitem>
  </configstore>
