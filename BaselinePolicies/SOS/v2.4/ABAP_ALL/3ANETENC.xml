      <compliant>       NAME = 'snc/only_encrypted_gui' and VALUE = '1' </compliant>
      <complianttext/>
      <noncompliant>    NAME = 'snc/only_encrypted_gui' and VALUE = '1'  </noncompliant>
      <noncomplianttext/>
